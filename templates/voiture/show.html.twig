{% extends 'base.html.twig' %}

{% block title %}Détails de la Voiture{% endblock %}

{% block body %}
    <h1>Détails de la Voiture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Immatriculation</th>
                <td>{{ voiture.immatriculation }}</td>
            </tr>
            <tr>
                <th>Modèle</th>
                <td>{{ voiture.modele }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ voiture.prix }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ voiture.marque.libelleMarque }}</td> <!-- Affiche la marque -->
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_voiture_index') }}">Retour à la liste</a>

    <a href="{{ path('app_voiture_edit', {'immatriculation': voiture.immatriculation}) }}">Modifier</a>

    {{ include('voiture/_delete_form.html.twig') }}
{% endblock %}
