{% extends 'base.html.twig' %}

{% block title %}Détails de la Marque{% endblock %}

{% block body %}
    <h1>Détails de la Marque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Code Marque</th>
                <td>{{ marque.codeMarque }}</td>
            </tr>
            <tr>
                <th>Libellé Marque</th>
                <td>{{ marque.libelleMarque }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_marque_index') }}" class="btn-link">Retour à la liste</a>

    <a href="{{ path('app_marque_edit', {'codeMarque': marque.codeMarque}) }}" class="btn-link">Modifier</a>

    {{ include('marque/_delete_form.html.twig') }}
{% endblock %}
